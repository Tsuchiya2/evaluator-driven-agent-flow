{
  "permissions": {
    "allow": [
      "Bash(docker compose exec:*)",
      "Bash(docker-compose exec:*)"
    ],
    "deny": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)"
    ],
    "ask": []
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["git push", "rm -rf", "docker rm"]
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$PWD/.claude/scripts/notification.sh 'Input needed' WarblerSong"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$PWD/.claude/scripts/notification.sh 'Task completed' CatMeow"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*worker*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$PWD/.claude/scripts/notification.sh\" 'Worker completed' WarblerSong"
          }
        ]
      }
    ]
  }
}
